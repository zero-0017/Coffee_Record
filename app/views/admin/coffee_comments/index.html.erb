<div class="admin-main">

  <!--フラッシュメッセージ-->
  <%= render 'layouts/flash_message' %>

    <div class="container">
      <div class="row">
        <h4 class="col-md-5 col-lg-4 col-xl-3 py-1 mt-2 back-text shadow">
          <strong>
            コメント一覧
          </strong>
        </h4>

        <!--全体の数とページの数を表示-->
        <div class="col-sm-5 col-lg-6 col-xl-5 list-top-all mt-3">
          <%= page_entries_info(@coffee_comments) %>
        </div>

        <div class="col-12 mx-auto">
          <% if @coffee_comments.present? %>
            <!--一覧一部テンプレート-->
            <%= render 'admin/coffee_comments/comment_list' %>
          <% else %>

            <!--パソコンの表示-->
            <h3 class="text-center mt-5 d-none d-lg-block">
              <strong>
                まだコメントはありません
              </strong>
            </h3>

            <!--タブレット、スマホの表示-->
            <h4 class="text-center mt-5 d-block d-lg-none">
              <strong>
                まだコメントはありません
              </strong>
            </h4>
            <% end %>
        </div>
      </div>
    </div>

  <!--ページネーション-->
  <%= render 'layouts/comment_paginate' %>
</div>