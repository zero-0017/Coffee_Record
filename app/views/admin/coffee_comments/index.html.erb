<div class="admin-main">
  <!--フラッシュメッセージ-->
  <%= render 'layouts/flash_message' %>
    <div class="container">
      <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mx-auto">
          <h4 class="col-md-5 col-lg-4 col-xl-3 py-1 mt-2 back-text shadow"><strong>コメント一覧</strong></h4>

            <% if @coffee_comments.present? %>
              <%= render 'admin/coffee_comments/comment_list' %>
            <% else %>

              <!--テレビ、デスクトップPCの表示-->
              <h3 class="text-center mt-5 d-none d-lg-block"><strong>まだコメントはありません</strong></h3>

              <!--ノートパソコン、タブレット、スマホの表示-->
              <h4 class="text-center mt-5 d-block d-lg-none"><strong>まだコメントはありません</strong></h4>

            <% end %>
        </div>
      </div>
    </div>

  <!--ページネーション-->
  <div class="mx-auto mt-2 pb-5">
    <%= paginate @coffee_comments, theme: 'bootstrap-5' %>
  </div>
</div>