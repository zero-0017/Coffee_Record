<div class="container">
  <h4 class="col-3 py-1 mt-2 text-center text-light" style="background-color:#000;"><strong>珈琲の淹れ方編集</strong></h4>
    <div class="row no-gutters">
      <div class="col-md-7 mx-sm-auto text-center shadow-lg px-3 py-3 mt-2 text-light" style="background-color: #556b2f;">
        <%= form_with model:@tag, url: admin_tag_path, local:true do |f| %>
          珈琲の淹れ方名
            <%= f.text_field :tag_name, class: "mx-2" %>
            <%= f.submit '変更を保存', class: "btn btn-success mx-2" %>
            <%= link_to "削除する", admin_tag_path(@tag.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
</div>