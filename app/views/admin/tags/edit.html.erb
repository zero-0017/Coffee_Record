<div class="admin-main">
  <div class="container">
    <h4 class="col-md-6 col-lg-4 col-xl-3 py-1 mt-2 back-text"><strong>珈琲の淹れ方編集</strong></h4>
      <!--エラーメッセージ表示-->
      <%= render 'layouts/error_messages', model: @tag %>
        <div class="row no-gutters">
          <div class="col-sm-11 col-md-11 col-lg-8 col-xl-7 mx-sm-auto text-center shadow-lg px-3 py-3 mt-2 back-admin">
            <%= form_with model: @tag, url: admin_tag_path do |f| %>

              珈琲の淹れ方<br>
              <%= f.text_field :tag_name, class: "mx-2 admin-form-all" %><br>
              <%= f.submit '変更を保存', class: "btn update-btn mx-2 mt-2" %>
              <%= link_to "削除する", admin_tag_path(@tag.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn destroy-btn mt-2" %>
            <% end %>
          </div>
        </div>
  </div>
</div>