<div class="admin-main">
<%= render 'layouts/flash_message' %>
<div class="container">
  <h4 class="col-md-6 col-lg-5 col-xl-4 py-1 mt-2 back-text"><strong>珈琲の淹れ方一覧・追加</strong></h4>
    <div class="row no-gutters">
      <div class="col-sm-10 col-md-8 col-lg-7 col-xl-6 mx-sm-auto text-center shadow-lg mt-2 pt-3 back-admin">
        <%= form_with model:@tag, url: admin_tags_path, local:true do |f| %>

          <!--エラーメッセージ表示-->
        　<%= render 'layouts/error_messages', model: f.object %>

          珈琲の淹れ方名
            <%= f.text_field :tag_name %>
            <%= f.submit '新規登録', class: "btn btn-secondary" %>
        <% end %>

          <table class="table table-hover mt-3 back-background">
            <thead class="table-dark">
              <tr>
                <th>珈琲の淹れ方</th>
                <th></th>
              </tr>
            </thead>
          <tbody>
            <% @tags.each do |tag| %>
              <tr>
                <td>
                  <%= tag.tag_name %>
                </td>

                <td>
                  <%= link_to "編集する", edit_admin_tag_path(tag.id), class: "btn btn-dark" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>

<!--ページネーション-->
<div class="mx-auto mt-2 pb-3">
  <%= paginate @tags %>
</div>
</div>