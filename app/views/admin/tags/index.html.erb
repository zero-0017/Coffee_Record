<div class="container">
  <h4><strong>ジャンル一覧・追加</strong></h4>
    <div class="row no-gutters">
      <div class="col-md-5 mx-sm-auto text-center shadow-lg py-5">
        <%= form_with model:@tag, url: admin_tags_path, local:true do |f| %>
          タグ名
            <%= f.text_field :tag_name %>
            <%= f.submit '新規登録', class: "btn btn-secondary" %>
        <% end %>

          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>タグ</th>
                <th></th>
              </tr>
            </thead>
          <tbody>
            <% @tags.each do |tag| %>
              <tr>
                <td>
                  <%= tag.tag_name %>
                </td>

                <td>
                  <%= link_to "編集する", edit_admin_tag_path(tag.id), class: "btn btn-dark" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>