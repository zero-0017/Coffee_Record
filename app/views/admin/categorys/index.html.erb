<div class="container">
  <h4 class="col-4 py-1 mt-2 text-center text-light" style="background-color:#000;"><strong>珈琲の種類一覧・追加</strong></h4>
    <div class="row no-gutters">
      <div class="col-md-6 mx-sm-auto text-center shadow-lg mt-2 pt-3 text-light" style="background-color: #556b2f;">
        <%= form_with model:@category, url: admin_categorys_path, local:true do |f| %>
          珈琲の種類名
            <%= f.text_field :category_name %>
            <%= f.submit '新規登録', class: "btn btn-secondary" %>
        <% end %>

          <table class="table table-hover mt-3" style="background-color: #fff;">
            <thead class="table-dark">
              <tr>
                <th>珈琲の種類</th>
                <th></th>
              </tr>
            </thead>
          <tbody>
            <% @categorys.each do |category| %>
              <tr>
                <td>
                  <%= category.category_name %>
                </td>

                <td>
                  <%= link_to "編集する", edit_admin_category_path(category.id), class: "btn btn-dark" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>

<!--ページネーション-->
<div class="mx-auto mt-4">
  <%= paginate @categorys %>
</div>