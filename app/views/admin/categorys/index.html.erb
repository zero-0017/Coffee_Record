<div class="container">
  <h4><strong>カテゴリー一覧・追加</strong></h4>
    <div class="row no-gutters">
      <div class="col-md-5 mx-sm-auto text-center shadow-lg py-5">
        <%= form_with model:@category, url: admin_categorys_path, local:true do |f| %>
          カテゴリー名
            <%= f.text_field :category_name %>
            <%= f.submit '新規登録', class: "btn btn-secondary" %>
        <% end %>

          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>カテゴリー</th>
                <th></th>
              </tr>
            </thead>
          <tbody>
            <% @categorys.each do |category| %>
              <tr>
                <td>
                  <%= category.category_name %>
                </td>

                <td>
                  <%= link_to "編集する", edit_admin_category_path(category.id), class: "btn btn-dark" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>