<div class="container">
  <h4><strong>ジャンル一覧・追加</strong></h4>
    <div class="row no-gutters">
      <div class="col-md-5 mx-sm-auto text-center shadow-lg py-5">
        <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
          ジャンル名
            <%= f.text_field :genre_name %>
            <%= f.submit '新規登録', class: "btn btn-secondary" %>
        <% end %>

          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>ジャンル</th>
                <th></th>
              </tr>
            </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td>
                  <%= genre.genre_name %>
                </td>

                <td>
                  <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-dark" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>