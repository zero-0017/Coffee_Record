<%= render 'layouts/flash_message' %>
<div class="container">
  <h4 class="col-4 py-1 mt-2 back-text"><strong>珈琲豆の種類一覧・追加</strong></h4>
    <div class="row no-gutters">
      <div class="col-md-6 mx-sm-auto text-center shadow-lg mt-2 pt-3 back-admin">
        <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>

          <!--エラーメッセージ表示-->
        　<%= render 'layouts/error_messages', model: f.object %>

          珈琲豆の種類名
            <%= f.text_field :genre_name %>
            <%= f.submit '新規登録', class: "btn btn-secondary" %>
        <% end %>

          <table class="table table-hover mt-3 back-background">
            <thead class="table-dark">
              <tr>
                <th>珈琲豆の種類</th>
                <th></th>
              </tr>
            </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td>
                  <%= genre.genre_name %>
                </td>

                <td>
                  <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-dark" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>

<!--ページネーション-->
<div class="mx-auto mt-2">
  <%= paginate @genres %>
</div>