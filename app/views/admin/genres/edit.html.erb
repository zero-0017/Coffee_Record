<div class="container">
  <h4 class="col-md-6 col-lg-4 col-xl-3 py-1 mt-2 back-text"><strong>珈琲豆の種類編集</strong></h4>
    <div class="row no-gutters">
      <div class="col-sm-11 col-md-11 col-lg-8 col-xl-7 mx-sm-auto text-center shadow-lg px-3 py-3 mt-2 back-admin">
        <%= form_with model:@genre, url: admin_genre_path, local:true do |f| %>
          <!--エラーメッセージ表示-->
        　<%= render 'layouts/error_messages', model: f.object %>

        　珈琲豆の種類名
            <%= f.text_field :genre_name, class: "mx-2" %>
            <%= f.submit '変更を保存', class: "btn btn-success mx-2" %>
            <%= link_to "削除する", admin_genre_path(@genre.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
</div>