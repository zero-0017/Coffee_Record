<div class="admin-main">
  <div class="container">
    <div class="row">
      <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mx-auto">

        <!--会員名の検索一覧-->
        <% if @range == "User" %>
          <h4 class="col-md-4 col-lg-4 col-xl-3 py-1 mt-2 back-text"><strong>会員名 『<%= params[:word] %>』</strong></h4>
            <% if @users.present? %>
              <%= render 'admin/users/user_list' %>
            <% else %>

                <!--テレビ、デスクトップPCの表示-->
                <h3 class="text-center mt-5 d-none d-lg-block"><strong>一致する会員名は検出できませんでした</strong></h3>

                <!--ノートパソコン、タブレット、スマホの表示-->
                <h4 class="text-center mt-5 d-block d-lg-none"><strong>一致する会員名は検出できませんでした</strong></h4>
            <% end %>

        <!--投稿名の検索一覧-->
        <% elsif @range == "PostCoffee" %>
          <h4 class="col-4 py-1 mt-2 back-text"><strong>投稿名 『<%= params[:word] %>』</strong></h4>
            <% if @post_coffees.present? %>
              <%= render 'admin/post_coffees/post_list' %>
            <% else %>

                <!--テレビ、デスクトップPCの表示-->
                <h3 class="text-center mt-5 d-none d-lg-block"><strong>一致する投稿名は検出できませんでした</strong></h3>

                <h4 class="text-center mt-5 d-block d-lg-none"><strong>一致する投稿名は検出できませんでした</strong></h4>
            <% end %>

        <!--コメント内容の検索一覧-->
        <% else %>
          <h4 class="col-md-6 col-lg-5 col-xl-5 py-1 mt-2 back-text"><strong><div class="comment_count">コメント内容 『<%= params[:word] %>』</div></strong></h4>
            <% if @coffee_comments.present? %>
              <%= render 'admin/coffee_comments/comment_list' %>
            <% else %>

                <!--テレビ、デスクトップPCの表示-->
                <h3 class="text-center mt-5 d-none d-lg-block"><strong>一致するコメント内容は検出できませんでした</strong></h3>

                <h4 class="text-center mt-5 d-block d-lg-none"><strong>一致するコメント内容は検出できませんでした</strong></h4>
            <% end %>
        <% end %>
  　   </div>
    </div>
  </div>

<!--会員検索一覧ページネーション-->
<% if @range == "User" %>
  <div class="mx-auto mt-3 pb-5">
    <%= paginate @users %>
  </div>
<!--投稿検索一覧ページネーション-->
<% elsif @range == "PostCoffee" %>
  <div class="mx-auto mt-3 pb-5">
    <%= paginate @post_coffees %>
  </div>
<!--コメント検索一覧ページネーション-->
<% else %>
  <div class="mx-auto mt-3 pb-5">
    <%= paginate @coffee_comments %>
  </div>
<% end %>
</div>