<%= form_with url: admin_search_path, method: :get do |f| %>
  <div class="input-group pr-5">
    <%= f.text_field :word, required: true, class: "search-form" %>
    <%= f.select :range, options_for_select([["会員名", "User"],["投稿名", "PostCoffee"],["コメント内容", "CoffeeComment"]]) %>
    <%= f.select :search, options_for_select([["完全一致", "perfect_match"], ["前方一致", "forward_match"], ["後方一致", "backward_match"], ["部分一致", "partial_match"]]) %>
      <div class="input-group-append"><button class="btn bg-transparent search-btn" type="submit"><i class="fa fa-search text-light"></i></button></div>
  </div>
<% end %>