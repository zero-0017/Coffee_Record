<div class="admin-main">
  <div class="container">
    <h4 class="col-md-4 col-lg-4 col-xl-3 py-1 mt-2 back-text shadow"><strong>お問い合わせ詳細</strong></h4>
      <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mx-auto">

          <%= form_with model: @contact, url: admin_contact_path do |f| %>
            <table class="table shadow mt-4 table-hover back-background">
              <thead class="table-active back-admin">
                <tr>
                  <th class="text-light">お問い合わせ件名・日時</th>
                  <th class="text-light" style="width: 60%">お問い合わせ内容</th>
                  <th class="text-light">対応状況</th>
                </tr>
              </thead>

              <tbody>
                <tr>

                  <!--お問い合わせ件名-->
                  <td><%= @contact.contact_type %>

                    <!--お問い合わせ日時-->
                    <div class="mt-5"><%= l @contact.created_at %></div>

                  <!--お問い合わせ内容-->
                  <td><%= @contact.content %></td>

                  <!--対応状況-->
                  <td>
                    <%= f.select :status, Contact.statuses.keys.map { |k| [t("enums.contact.status.#{k}"),k]}, {}, {class: "custom-select"} %>
                  </td>
                </tr>
              </tbody>
            </table>

            <div class="text-center">
              <%= f.submit "変更内容保存", class: "btn edit-btn mt-2 shadow" %>
            </div>
          <% end %>

        </div>
      </div>
  </div>
</div>