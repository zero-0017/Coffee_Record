<div class="admin-main">
  <div class="container">
    <h4 class="col-md-4 col-lg-4 col-xl-3 py-1 mt-2 back-text shadow">
      <strong>
        お問い合わせ詳細
      </strong>
    </h4>

      <div class="row pb-5">
        <div class="col-12 mx-auto pb-5">

          <%= form_with model: @contact, url: admin_contact_path do |f| %>
            <table class="table shadow mt-4 table-hover back-background">
              <thead class="back-admin">
                <tr>
                  <th class="text-light" style="width: 45%;">
                    <!--パソコン、タブレットの表示-->
                    <div class="d-none d-sm-block">
                      お問い合わせ件名・日時
                    </div>

                    <!--スマホの表示-->
                    <div class="d-block d-sm-none">
                      件名・日時
                    </div>
                  </th>

                  <th class="text-light" style="width: 55%;">
                    <!--パソコン、タブレットの表示-->
                    <div class="d-none d-sm-block">
                      お問い合わせ内容
                    </div>

                    <!--スマホの表示-->
                    <div class="d-block d-sm-none">
                      内容
                    </div>
                  </th>
                </tr>
              </thead>

              <tbody>
                <tr>

                  <td>
                    <!--お問い合わせ件名-->
                    <%= @contact.contact_type %>

                    <!--お問い合わせ日時-->
                    <div class="mt-5">
                      <%= l @contact.created_at %>
                    </div>

                  <td>
                    <!--お問い合わせ内容-->
                    <%= @contact.content %>
                  </td>

                </tr>
              </tbody>

              <tbody class="table-back">
                <tr>
                  <!--対応状況-->
                  <td class="text-light">
                    [ 対応状況 ]
                    <%= f.select :status, Contact.statuses.keys.map { |k| [t("enums.contact.status.#{k}"),k]}, {}, {class: "custom-select"} %>
                  </td>
                  <td></td>
                </tr>
              </tbody>
            </table>

            <div class="text-center">
              <%= f.submit "変更内容保存", class: "btn edit-btn mt-2 shadow" %>
            </div>
          <% end %>

        </div>
      </div>
  </div>
</div>