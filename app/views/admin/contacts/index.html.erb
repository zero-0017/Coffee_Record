<div class="admin-main">
  <!--フラッシュメッセージ-->
  <%= render 'layouts/flash_message' %>
    <div class="container">
      <h4 class="col-sm-4 col-md-4 col-lg-3 col-xl-2 py-1 mt-2 mx-auto back-text"><strong>お問い合わせ</strong></h4>
        <div class="row">
          <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mx-auto">

            <% if @contacts.present? %>
              <table class="table shadow-lg mt-4 table-hover back-background">
                <thead class="table-active back-admin">
                  <tr>
                    <th class="text-light" style="width: 30%">お問い合わせ件名</th>
                    <th class="text-light">お問い合わせ会員名</th>
                    <th class="text-light">お問い合わせ日時</th>
                    <th class="text-light">対応状況</th>
                    <th></th>
                  </tr>
                </thead>

              <% @contacts.each do |contact| %>
                <tbody>
                  <tr>
                    <td><%= contact.contact_type %></td>
                    <td><%= contact.user.name %></td>
                    <td><%= l contact.created_at %></td>
                    <td><%= contact.status %></td>
                    <td><%= link_to "詳細", admin_contact_path(contact.id), class: "btn btn-sm show-btn" %></td>
                  </tr>
                </tbody>
              <% end %>
              </table>

            <% else %>
              <h3 class="text-center mt-5"><strong>まだお問い合わせはありません</strong></h3>
            <% end %>

          </div>
        </div>
    </div>

  <!--ページネーション-->
  <div class="mx-auto mt-3 pb-5">
    <%= paginate @contacts, theme: 'bootstrap-5' %>
  </div>
</div>