<table class="table shadow mt-4 table-hover back-background">
  <thead class="back-admin">
    <tr>
      <th class="text-light">
        <!--テレビ、デスクトップPCの表示-->
        <div class="d-none d-lg-block">
          会員ID
        </div>

        <!--ノートパソコン、タブレット、スマホの表示-->
        <div class="d-block d-lg-none">
          ID
        </div>
      </th>

      <th class="text-light">
        <!--テレビ、デスクトップPC、ノートパソコンの時のみ表示-->
        <div class="d-none d-lg-block">
          会員画像
        </div>
      </th>

      <th class="text-light" style="width: 30%">
        会員名
      </th>

      <th class="text-light">
        <!--テレビ、デスクトップPC、ノートパソコン、タブレットの時のみ表示-->
        <div class="d-none d-sm-block">
          メールアドレス
        </div>
      </th>

      <th></th>
    </tr>
  </thead>
<% @users.each do |user| %>
  <tbody>
    <tr>
      <td>
        <!--テレビ、デスクトップPCの表示-->
        <div class="d-none d-lg-block">
          <%= user.id %>
        </div>

        <!--ノートパソコン、タブレット、スマホの表示-->
        <div class="d-block d-lg-none">
          <%= user.id %>
        </div>
      </td>

      <td><%= image_tag user.get_profile_image(300, 300), class: "rounded-circle d-none d-lg-block", :size => '100' %></td>
      <td>
        <!--テレビ、デスクトップPCの表示-->
        <div class="d-none d-lg-block">
          <%= user.name %>
        </div>

        <!--ノートパソコン、タブレット、スマホの表示-->
        <div class="d-block d-lg-none">
          <%= user.name.truncate(6) %>
        </div>
      </td>

      <td>
        <!--テレビ、デスクトップPC、ノートパソコン、タブレットの時のみ表示-->
        <div class="d-none d-sm-block">
          <%= user.email %>
        </div>
      </td>

      <% if user.is_deleted == true %>
        <td class="text-primary font-weight-bold">退会
          <%= link_to "詳細", admin_user_path(user.id), class: "btn btn-sm show-btn shadow" %>
        </td>
      <% else %>
        <td class="text-danger font-weight-bold">有効
          <%= link_to "詳細", admin_user_path(user.id), class: "btn btn-sm show-btn shadow " %>
        </td>
      <% end %>

    </tr>
  </tbody>
<% end %>
</table>