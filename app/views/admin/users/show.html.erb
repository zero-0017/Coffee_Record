<div class="admin-main">
<div class="container">
  <h4 class="col-md-8 col-lg-6 col-xl-6 py-1 mt-2 back-text shadow"><strong><%= @user.name %>さんの会員情報詳細</strong></h4>
    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-12 col-lg-11">

　      <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
          <table class="table shadow mt-2 table-hover back-background">
            <thead class="back-admin">
              <tr>
                <th class="text-light" style="width: 15%">会員ID</th>
                <th class="text-light" style="width: 20%">会員画像</th>
                <th class="text-light" style="width: 30%">会員名</th>
                <th class="text-light" style="width: 35%">メールアドレス</th>
              </tr>
            </thead>

            <tbody>
              <tr>
                <td><%= @user.id %></td>
                <td><%= image_tag @user.get_profile_image(300, 300), class: "rounded-circle", :size => '100' %></td>
                <td><%= @user.name %></td>
                <td><%= @user.email %></td>
              </tr>
            </tbody>

            <tbody>
              <tr>
                <td></td>
                <td>会員ステータス</td>

                <td>
                  <%= f.radio_button :is_deleted, false, checked: true %>有効
                  <%= f.radio_button :is_deleted, true%>退会
                </td>
                <td></td>
              </tr>
            </tbody>


          </table>

          <div class="actions text-center">
            <%= f.submit "変更を保存", class: "btn update-btn mt-2 shadow" %>
          </div>
        <% end %>
      </div>
　  </div>
</div>
</div>