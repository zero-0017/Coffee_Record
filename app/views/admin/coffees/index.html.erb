<div class="admin-main">

  <!--フラッシュメッセージ-->
  <%= render 'layouts/flash_message' %>

    <div class="container">
      <div class="row">
        <h4 class="col-md-6 col-lg-5 col-xl-4 py-1 mt-2 back-text shadow">
          <strong>
            珈琲の種類一覧・追加
          </strong>
        </h4>

        <!--全体の数とページの数を表示-->
        <div class="col-sm-8 col-mb-4 col-lg-6 col-xl-5 list-top-all mt-3">
          <%= page_entries_info(@coffees) %>
        </div>
      </div>

        <!--エラーメッセージ表示-->
        <%= render 'layouts/error_messages', model: @coffee %>

          <div class="row no-gutters mt-3">
            <div class="col-sm-10 col-md-8 col-lg-7 col-xl-6 mx-sm-auto text-center shadow pt-3 back-admin">
              <%= form_with model: @coffee, url: admin_coffees_path do |f| %>

                <p>珈琲の種類名</p>
                <%= f.text_field :coffee_name, class: "admin-form-all", placeholder: "(例)珈琲" %><br>
                <%= f.submit "新規登録", class: "btn post-btn shadow" %>
              <% end %>

              <table class="table table-hover mt-3 back-background">
                <thead class="table-sidebar_th">
                  <tr>
                    <th style="width: 60%;">
                      珈琲の種類
                    </th>

                    <th style="width: 40%;"></th>
                  </tr>
                </thead>
              <% @coffees.each do |coffee| %>
                <tbody>
                  <tr>
                    <!--珈琲の種類名-->
                    <td>
                      <%= coffee.coffee_name %>
                    </td>

                    <!--編集ボタン-->
                    <td>
                      <%= link_to "編集", edit_admin_coffee_path(coffee.id), class: "btn btn-sm edit-btn shadow" %>
                    </td>
                  </tr>
                </tbody>
              <% end %>
              </table>
            </div>
          </div>
    </div>

  <!--ページネーション-->
  <div class="mx-auto mt-3 pb-5">
    <%= paginate @coffees, theme: 'bootstrap-5' %>
  </div>
</div>