<table class="table shadow mt-4 table-hover back-background">
  <thead class="back-admin">
    <tr>
      <th class="text-light"><div class="d-none d-sm-block">投稿画像</div></th>
      <th class="text-light" style="width: 40%">投稿名</th>
      <th class="text-light">会員名</th>
      <th></th>
    </tr>
  </thead>
<% @post_coffees.each do |post_coffee| %>
  <tbody>
    <tr>
      <td><%= image_tag post_coffee.get_image, class: "rounded d-none d-sm-block", :size => '100' %></td>
      <td><%= post_coffee.coffee_name.truncate(10) %></td>

      <td>
        <%= link_to admin_user_path(post_coffee.user.id) do %>
          <%= post_coffee.user.name %><br>
          <%= link_to "詳細", admin_post_coffee_path(post_coffee.id), class: "btn btn-sm show-btn shadow mt-5" %>
        <% end %>
      </td>

    </tr>
  </tbody>
<% end %>
</table>