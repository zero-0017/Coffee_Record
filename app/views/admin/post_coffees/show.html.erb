<div class="admin-main">
  <div class="container pb-5">
    <h4 class="col-md-4 col-lg-4 col-xl-3 py-1 mt-2 back-text"><strong>投稿詳細</strong></h4>
      <div class="row shadow back-show">

        <div class="col-xl-5 col-lg-4 col-md-5 pb-2 back-background">
          <!--投稿画像-->
          <%= image_tag @post_coffee.get_image, class: "card-img shadow" %>

　        <!--会員画像-->
          <%= image_tag @post_coffee.user.get_profile_image(100,100), class: "mt-3 rounded"; %>

          <!--会員名-->
          会員名：<%= @post_coffee.user.name %>

          <!--投稿日時-->
          <div class="justify-content-start mr-4 mt-4">
          投稿日時：<%= l @post_coffee.created_at %>
          </div>

          <div class="row justify-content-end">

            <!--コメント数-->
            <i class="fa fa-comment m-1"></i>
            <div class="comment_count mr-4">
              <%= @post_coffee.coffee_comments.count %>
            </div>
          </div>
        </div>

        <div class="col-xl-7 col-lg-8 col-md-7 back-show-list">
          <h5 class="mt-3 ml-3">投稿名<br>
            <%= @post_coffee.coffee_name %>
          </h5>

　        <h5 class="mt-3 ml-3">珈琲の淹れ方<br>
　          <%= @post_coffee.tag.tag_name %>
　        </h5>

　        <h5 class="mt-3 ml-3">珈琲の種類<br>
　          <%= @post_coffee.category.category_name %>
　        </h5>

　        <h5 class="mt-4 ml-3">珈琲豆の種類<br>
　          <%= @post_coffee.genres.map(&:genre_name).join('・') %>
　        </h5>

          <h5 class="mt-5 ml-3">投稿説明<br>
　          <%= @post_coffee.coffee_explanation %>
　        </h5>
        </div>

        <div class="row mx-auto py-2">
          <%= link_to "削除", admin_post_coffee_path(@post_coffee), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger" %>
        </div>
      </div>

      <!--コメント表示-->
      <h4 class="col-md-4 col-lg-4 col-xl-3 py-1 mt-5 back-text"><strong>コメント一覧</strong></h4>
        <table class="table shadow mb-5 mx-auto back-background col-xl-12 col-lg-13 col-md-12 comment-table">
          <% if @post_coffee.coffee_comments.present? %>
            <% @post_coffee.coffee_comments.each do |coffee_comment| %>
              <tbody>
                <tr>
                  <td><%= image_tag coffee_comment.user.get_profile_image(100,100), class: "rounded-circle"; %><br>
                    会員名：<%= coffee_comment.user.name %><br>
                    <div class="mt-5"><%= l coffee_comment.created_at %></div>
                  </td>

　　　　　        <td style="width: 60%"><%= coffee_comment.comment %></td>
                </tr>
              </tbody>
            <% end %>
          <% else %>
            <h3 class="text-center mt-5"><strong>まだコメントはありません</strong></h3>
          <% end %>
        </table>
  </div>
</div>