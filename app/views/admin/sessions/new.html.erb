<div class="main-log">
  <%= render 'layouts/flash_message' %>
 <div class="container">
  <div class="row">
    <div class="mx-auto">
      <div class="mb-4 mt-5 pt-2 pb-1 text-light shadow text-center">
        <h2>管理者ログイン</h2>
      </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field text-light shadow pt-1 px-2">
            <%= f.label :"メールアドレス" %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 30, placeholder: "(例)Coffee.11@post.com" %>
          </div>

          <div class="field mt-4 text-light shadow pt-1 px-2">
            <%= f.label :"パスワード" %><br>
            <%= f.password_field :password, autocomplete: "current-password", size: 30, placeholder: "パスワードを入力して下さい" %>
          </div>

          <% if devise_mapping.rememberable? %>
           <div class="field text-light mt-2">
             <%= f.check_box :remember_me %>
             <%= f.label :"ログイン内容を記録する" %>
           </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-dark shadow" %>
          </div>
        <% end %>

    </div>
  </div>
 </div>
</div>