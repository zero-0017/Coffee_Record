<div class="main-log">
 <div class="container">
  <div class="row">
    <div class="mx-auto">
      <div class="mb-4 mt-5 text-light">
        <h2>管理者ログイン</h2>
      </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field text-light">
            <%= f.label :"メールアドレス" %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 30 %>
          </div>

          <div class="field mt-4 text-light">
            <%= f.label :"パスワード" %><br>
            <%= f.password_field :password, autocomplete: "current-password", size: 30 %>
          </div>

          <% if devise_mapping.rememberable? %>
           <div class="field text-light">
             <%= f.check_box :remember_me %>
             <%= f.label :remember_me %>
           </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-dark" %>
          </div>
        <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
 </div>
</div>