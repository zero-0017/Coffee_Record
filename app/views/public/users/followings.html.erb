<div class="container">
  <div class="row">
    <% if @user == current_user %>
      <h4 class="col-md-5 col-lg-4 col-xl-3 py-1 mt-2 back-text shadow">
        <strong>
          フォロー一覧
        </strong>
      </h4>
    <% else %>
      <h4 class="col-md-12 col-lg-8 col-xl-6 py-1 mt-2 mx-auto back-text shadow">
        <!--パソコンの表示-->
        <strong class="d-none d-md-block">
          <%= @user.name %>のフォロー一覧
        </strong>

        <!--タブレット、スマホの表示-->
        <strong class="d-block d-md-none">
          <%= @user.name.truncate(6) %>のフォロー一覧
        </strong>
      </h4>
    <% end %>

      <!--全体の数とページの数を表示-->
      <div class="col-sm-6 col-lg-6 col-xl-5 list-top-all mt-3">
        <%= page_entries_info(@users) %>
      </div>

    <div class="col-12 mx-auto">
      <% if @users.present? %>
        <!--一覧一部テンプレート-->
        <%= render 'public/users/user_index' %>
      <% else %>

        <!--パソコンの表示-->
        <h3 class="text-center mt-5 d-none d-lg-block">
          <strong>
            まだ会員はいません
          </strong>
        </h3>

        <!--タブレット、スマホの表示-->
        <h4 class="text-center mt-5 d-block d-lg-none">
          <strong>
            まだ会員はいません
          </strong>
        </h4>
      <% end %>
    </div>
  </div>
</div>

<!--ページネーション-->
<%= render 'layouts/user_paginate' %>