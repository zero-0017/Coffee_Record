<!--フラッシュメッセージ-->
  <%= render 'layouts/flash_message' %>
    <div class="container">
      <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mx-auto">
          <h4 class="col-md-4 col-lg-4 col-xl-3 py-1 mt-2 back-text"><strong>会員一覧</strong></h4>

            <% if @users.present? %>
              <table class="table shadow-lg mt-4 table-hover back-background">
                <thead class="table-active back-admin">
                  <tr>
                    <th class="text-light">会員画像</th>
                    <th class="text-light" style="width: 60%">会員名</th>
                    <th></th>
                  </tr>
                </thead>
              <% @users.each do |user| %>
                <tbody>
                  <tr>
                    <td><%= image_tag user.get_profile_image(100, 100), class: "rounded-circle", :size => '100' %></td>
                    <td><%= user.name %></td>
                    <td><%= link_to "詳細", user_path(user.id), class: "btn btn-sm show-btn" %></td>
                  </tr>
                </tbody>
              <% end %>
              </table>
            <% else %>
              <h3 class="text-center mt-5"><strong>まだ会員はいません</strong></h3>
            <% end %>
        </div>
      </div>
    </div>

  <!--ページネーション-->
  <div class="mx-auto mt-3 pb-5">
    <%= paginate @users %>
  </div>
</div>