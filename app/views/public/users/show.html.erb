<!--フラッシュメッセージ-->
<%= render 'layouts/flash_message' %>
<div class="container">
  <h4 class="col-md-4 col-lg-4 col-xl-3 py-1 mt-2 mx-auto back-text shadow"><strong>マイページ</strong></h4>
    <div class="row justify-content-center">
      <div class="col-xl-3 col-lg-4 col-md-9 col-sm-10 back-background shadow">

          <!--会員画像-->

          <!--テレビ、デスクトップPC、ノートパソコンの表示-->
          <div class="d-none d-lg-block">
            <%= image_tag @user.get_profile_image(500,500), class: "card-img mt-3 user-image", :size => '250' %>
          </div>

          <!--タブレットの表示-->
          <div class="d-none d-md-block d-lg-none">
            <%= image_tag @user.get_profile_image(500,500), class: "card-img mt-3 user-image", :size => '460' %>
          </div>

          <!--スマホの表示-->
          <div class="d-sm-block d-md-none">
            <%= image_tag @user.get_profile_image(500,500), class: "card-img mt-3 user-image", :size => '420' %>
          </div>

          <div class="row justify-content-center my-2">

            <% if @user.name != "ゲストユーザー" %>
              <%= link_to "フォロー数：#{@user.followings.count}", followings_user_path(@user) %> | <div id="followers_<%= @user.id %>"><%= link_to "フォロワー数：#{@user.followers.count}", followers_user_path(@user) %></div>
            <% end %>

          </div>

          <div class="row justify-content-center my-2">
            <!--編集ボタン-->
            <% if @user.name != "ゲストユーザー" %><!--ゲストユーザーは非表示-->
              <% if @user == current_user %><!--ログインしている会員のみ表示、以外ならフォローボタン表示-->

                <%= link_to "プロフィール編集", edit_user_path(@user), class: "btn edit-btn shadow" %>
              <% else %>
                <div id="follow_buttons_<%= @user.id %>">
                 <%= render 'public/relationships/follow', user: @user %>
                </div>

              <% end %>
            <% end %>
          </div>

        </div>

      <div class="col-xl-5 col-lg-6 col-md-9 col-sm-10 back-background shadow">

         <!--会員名-->
          <h5 class="mt-4 mb-5">会員名：<%= @user.name %></h5>

          <h5 style="word-break: break-all">自己紹介文<br>
            <%= @user.introduction %>
          </h5>

       </div>

    </div>

    <!--会員ボタンリスト-->
    <div class="row mt-2 justify-content-center">
      <div class="col-xl-3 col-lg-4 col-md-5">
        <%= link_to "お気に入り投稿一覧", favorites_user_path(@user), class: "btn user-show-btn btn-block shadow" %>

        <% if @user == current_user %>
          <%= link_to "下書き一覧", confirm_post_coffees_path, class: "btn user-show-btn btn-block mb-2 shadow" %>
        <% end %>
      </div>

      <div class="col-xl-3 col-lg-4 col-md-5">
        <%= link_to "会員の投稿一覧", post_list_user_path, class: "btn user-show-btn btn-block shadow" %>

        <% if @user == current_user %>
          <%= link_to "お問い合わせ", contacts_path, class: "btn user-show-btn btn-block shadow" %>
        <% end %>
      </div>
    </div>

</div>



<!--会員の投稿一覧-->
<div class="container">
  <h4 class="col-md-4 col-lg-4 col-xl-3 py-1 back-text shadow mt-2"><strong>新着投稿</strong></h4>
    <div class="row pb-5">

      <% if @post_coffees.present? %>
        <% @post_coffees.last(6).each do |post_coffee| %>
          <div class="col-xl-2 col-lg-4 col-md-6 col-sm-12 card shadow">

            <!--投稿画像-->

            <!--テレビ、デスクトップPCの表示-->
            <div class="d-none d-xl-block">
              <%= link_to post_coffee_path(post_coffee.id) do %>
                <%= image_tag post_coffee.get_image, class: "card-img", :size => '148' %>
              <% end %>
            </div>

            <!--ノートパソコンの表示-->
            <div class="d-none d-lg-block d-xl-none">
              <%= link_to post_coffee_path(post_coffee.id) do %>
                <%= image_tag post_coffee.get_image, class: "card-img", :size => '250' %>
              <% end %>
            </div>

            <!--タブレットの表示-->
            <div class="d-none d-md-block d-lg-none">
              <%= link_to post_coffee_path(post_coffee.id) do %>
                <%= image_tag post_coffee.get_image, class: "card-img", :size => '250' %>
              <% end %>
            </div>

            <!--スマホの表示-->
            <div class="d-sm-block d-md-none">
              <%= link_to post_coffee_path(post_coffee.id) do %>
                <%= image_tag post_coffee.get_image, class: "card-img", :size => '498' %>
              <% end %>
            </div>

            <!--投稿名-->
            <div class="text-center">
              <h5><%= post_coffee.coffee_name.truncate(8) %></h5>
            </div>

            <div class="row justify-content-end">
              <!--コメント数-->
              <div class="mr-4">
                <i class="fa fa-comment"></i><%= post_coffee.coffee_comments.count %>
              </div>

              <!--いいね数・いいね機能-->
              <div class="mr-4 favorite_buttons_<%= post_coffee.id %>">
                <%= render "public/favorites/favorite", post_coffee: post_coffee %>
              </div>
        　   </div>

          </div>
        <% end %>

      <% else %>

        <!--テレビ、デスクトップPCの表示-->
        <div class="mx-auto mt-3 d-none d-lg-block">
          <h3><strong>新着の投稿はありません</strong></h3>
        </div>

        <!--ノートパソコン、タブレット、スマホの表示-->
        <div class="mx-auto mt-3 d-block d-lg-none">
          <h4><strong>新着の投稿はありません</strong></h4>
        </div>

      <% end %>

  　</div>
</div>