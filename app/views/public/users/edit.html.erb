<div class="container">
  <h4 class="col-md-5 col-lg-4 col-xl-3 py-2 mt-2 back-text"><strong>会員情報編集</strong></h4>
    <div class="row no-gutters pb-5">
      <div class="col-xl-5 col-lg-8 col-md-10 mx-sm-auto text-center shadow-lg py-5 back-background">
         <%= form_with model: @user do |f| %>

          <!--エラーメッセージ表示-->
          <%= render 'layouts/error_messages', model: f.object %>

           <!--会員名-->
       　   <h4>会員名</h4>
             <%= f.text_field :name, autofocus: true ,class: "mb-4" %>

           <!--会員画像-->
       　   <h4>会員画像</h4>
             <%= f.file_field :profile_image, accept: "image/*" ,class: "mb-4" %><br>

             <!--変更内容保存ボタン-->
             <%= f.submit "変更内容保存", class: "btn update-btn" %>

             <!--退会ボタン-->
             <%= link_to unsubscribe_users_path do %>
               <button type="button" class="btn unsubscribe-btn">退会する</button>
             <% end %>
         <% end %>
      </div>
    </div>
</div>