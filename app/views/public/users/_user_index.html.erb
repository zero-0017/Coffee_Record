<table class="table shadow mt-4 table-hover back-background">
  <thead class="back-admin">
    <tr>
      <th class="text-light" style="width: 45%">会員画像</th>
      <th class="text-light" style="width: 35%"><div class="d-none d-lg-block">自己紹介文</div></th>
      <th style="width: 20%"></th>
    </tr>
  </thead>

<% @users.each do |user| %>
  <tbody>
    <tr>

      <td>
        <!--会員画像-->
        <%= image_tag user.get_profile_image(300, 300), class: "rounded-circle", :size => '100' %>

        <!--会員名-->
        <div class="mt-2 ml-3">
          <%= link_to user_path(user.id) do %>
            <%= user.name.truncate(6) %>
          <% end %>
        </div>
      </td>

      <!--テレビ、デスクトップPC、ノートパソコンの時のみ表示-->
      <!--自己紹介文-->
      <td>
        <div class="d-none d-lg-block" style="word-break: break-all">
          <%= user.introduction %>
        </div>
      </td>

      <!--フォロー・フォロワーボタン-->
      <td id="follow_buttons_<%= user.id %>">
        <%= render 'public/relationships/follow', user: user %>
      </td>

    </tr>
  </tbody>
<% end %>
</table>