<table class="table shadow mt-4 table-hover back-background">
  <thead class="table-active back-admin">
    <tr>
      <th class="text-light">会員画像</th>
      <th class="text-light" style="width: 30%">会員名</th>
      <th colspan="2"></th>
    </tr>
  </thead>

<% @users.each do |user| %>
  <% if user.name != "ゲストユーザー" %><!--ゲストユーザーは非表示-->
    <tbody>
      <tr>

        <!--会員画像-->
        <td><%= image_tag user.get_profile_image(300, 300), class: "rounded-circle", :size => '100' %></td>

        <!--会員名-->
        <td>
          <%= link_to user_path(user.id) do %>
            <%= user.name %>
          <% end %>
        </td>

        <!--テレビ、デスクトップPC、ノートパソコンの時のみ表示-->
        <td class="d-none d-lg-block">
          <div class="mb-5"><%= link_to "フォロー数：#{user.followings.count}", followings_user_path(user) %></div>

          <div id="followers_<%= user.id %>"><%= link_to "フォロワー数：#{user.followers.count}", followers_user_path(user) %></div>
        </td>

        <!--フォロー・フォロワーボタン-->
        <td id="follow_buttons_<%= user.id %>">
          <%= render 'public/relationships/follow', user: user %>
        </td>

      </tr>
    </tbody>
  <% end %>
<% end %>
</table>