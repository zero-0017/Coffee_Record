<div class="main-sign">
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="container">
    <div class="row">
      <div class="mx-auto">
        <div class="mb-4 mt-5 pt-2 pb-1 text-light shadow text-center">
          <h2>新規登録</h2>
        </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


            <div class="field text-light shadow user-text pt-1 px-2">
              <%= f.label :"名前" %><br>
              <%= f.text_field :name, size: 30 %>
            </div>

            <div class="field mt-4 text-light shadow user-text pt-1 px-2">
              <%= f.label :"メールアドレス" %><br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 30 %>
            </div>

            <div class="field mt-4 text-light shadow user-text pt-1 px-2">
              <%= f.label :"パスワード" %>
              <% if @minimum_password_length %>
               (<%= @minimum_password_length %>文字以上)
              <% end %><br>
              <%= f.password_field :password, autocomplete: "new-password", size: 30 %>
            </div>

            <div class="field mt-4 text-light shadow user-text pt-1 px-2">
              <%= f.label :"パスワード(確認)" %><br>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 30 %>
            </div>

            <div class="actions">
              <%= f.submit "新規登録", class: "btn btn-secondary shadow" %>
            </div>
          <% end %>
        <p class=" mt-3 text-light">既に登録済みの方は、<br>
        <%= link_to "こちら", new_user_session_path, class: "text-user-top" %>からログインしてください。</p>
      </div>
    </div>
  </div>
</div>