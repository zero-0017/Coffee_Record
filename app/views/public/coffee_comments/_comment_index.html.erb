<!--コメント表示　[非同期通信化]-->
<h4 class="col-3 py-1 mt-5 back-text"><strong>コメント一覧</strong></h4>
  <table class="table shadow mb-5 mx-auto back-background">
    <% if post_coffee.coffee_comments.present? %>
      <% post_coffee.coffee_comments.each do |coffee_comment| %>
        <tbody>
          <tr>
            <td><%= image_tag coffee_comment.user.get_profile_image(100,100), class: "rounded-circle";  %><br>
              会員名：<%= coffee_comment.user.name %></td>

　　　　　  <td><%= coffee_comment.comment %></td>

            <td><%= l coffee_comment.created_at %></td>

            <% if coffee_comment.user == current_user %>
              <td><%= link_to "削除", post_coffee_coffee_comment_path(coffee_comment.post_coffee, coffee_comment), method: :delete, remote: true, class: "btn btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      <% end %>
    <% else %>
      <h3 class="text-center mt-5"><strong>コメントはまだありません</strong></h3>
    <% end %>
  </table>