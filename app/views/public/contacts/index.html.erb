<%= render 'layouts/flash_message' %>
<div class="container">
  <h4 class="col-sm-4 col-md-4 col-lg-3 col-xl-2 py-1 mt-2 mx-auto back-text"><strong>お問合せ</strong></h4>
  <div class="mt-4 text-center"><%= link_to "新規お問い合わせ", new_contact_path, class: "btn btn-light" %></div>
  <div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mx-auto">

      <table class="table shadow-lg mt-4 table-hover back-background">
        <thead class="table-active back-admin">
          <tr>
            <th class="text-light">お問合せ件名</th>
            <th class="text-light">お問合せ内容</th>
            <th class="text-light">お問合せ日時</th>
            <th class="text-light">対応状況</th>
          </tr>
        </thead>

      <% @contacts.each do |contact| %>
        <tbody>
          <tr>
            <td><%= contact.contact_type %></td>
            <td>
              <%= link_to contact_path(contact.id) do %>
                <%= contact.content.truncate(25) %>
              <% end %>
            </td>
            <td><%= l contact.created_at %></td>
            <td><%= contact.status %></td>
          </tr>
        </tbody>
      <% end %>
     </table>
    </div>
  </div>
</div>

<!--ページネーション-->
<div class="mx-auto mt-3 pb-5">
  <%= paginate @contacts %>
</div>