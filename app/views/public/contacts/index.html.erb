<!--フラッシュメッセージ-->
<%= render 'layouts/flash_message' %>
  <div class="container">
    <h4 class="col-md-5 col-lg-4 col-xl-3 py-1 mt-2 mx-auto back-text shadow"><strong>お問い合わせ</strong></h4>
      <div class="mt-4 text-center"><%= link_to "新規お問い合わせ", new_contact_path, class: "btn post-btn shadow" %></div>
        <div class="row">
          <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mx-auto">

            <% if @contacts.present? %>
              <table class="table mt-4 table-hover back-background shadow">
                <thead class="table-active back-admin">
                  <tr>
                    <th class="text-light" style="width: 45%">お問い合わせ件名・日時</th>
                    <th class="text-light" style="width: 35%">お問い合わせ内容</th>
                    <th class="text-light" style="width: 20%">対応状況</th>
                  </tr>
                </thead>

              <% @contacts.each do |contact| %>
                <tbody>
                  <tr>

                    <!--お問い合わせ件名-->
                    <td>
                      <%= contact.contact_type %>

                      <!--お問い合わせ日時-->
                        <div class="mt-5"><%= l contact.created_at %></div>
                    </td>

                    <!--お問合せ内容-->
                    <td>
                      <%= link_to contact_path(contact.id) do %>
                        <%= contact.content.truncate(20) %>
                      <% end %>
                    </td>

                    <!--対応状況-->
                    <td><%= contact.status %></td>
                  </tr>
                </tbody>
              <% end %>
              </table>

            <% else %>

              <!--テレビ、デスクトップPCの表示-->
              <h3 class="text-center mt-5 d-none d-lg-block"><strong>まだお問い合わせはありません</strong></h3>

              <!--ノートパソコン、タブレット、スマホの表示-->
              <h4 class="text-center mt-5 d-block d-lg-none"><strong>まだお問い合わせはありません</strong></h4>

            <% end %>

          </div>
        </div>
    </div>

<!--ページネーション-->
<div class="mx-auto mt-3 pb-5">
  <%= paginate @contacts, theme: 'bootstrap-5' %>
</div>