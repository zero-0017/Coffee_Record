<% if current_user.name != "ゲストユーザー" %>
  <% unless user.name == "ゲストユーザー" %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn follower-btn btn-sm shadow", remote: true %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn followed-btn btn-sm shadow", remote: true %>
    <% end %>
  <% end %>
<% end %>