<% if user != current_user %>
  <% if current_user.name != "ゲストユーザー" %>
    <% unless user.name == "ゲストユーザー" %>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn follower-btn btn-sm shadow d-none d-lg-block", remote: true %>

        <%= link_to user_relationships_path(user.id), method: :delete, class: "btn follower-btn btn-sm shadow d-lg-none d-block", remote: true do %>
          <i class="fa fa-user-times" aria-hidden="true"></i>
        <% end %>

      <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn followed-btn btn-sm shadow d-none d-lg-block", remote: true %>

        <%= link_to user_relationships_path(user.id), method: :post, class: "btn followed-btn btn-sm shadow d-lg-none d-block", remote: true do %>
          <i class="fa fa-user-plus" aria-hidden="true"></i>
        <% end %>

      <% end %>
    <% end %>
  <% end %>
<% end %>