<% @post_coffees.each do |post_coffee| %>
  <div class="col-md-6 col-lg-6 col-xl-3 card shadow">
    <div class="shadow">

      <!--投稿画像(パソコン[大]の表示)-->
      <div class="d-none d-xl-block">
        <%= link_to post_coffee_path(post_coffee.id) do %>
          <%= image_tag post_coffee.get_image, class: "card-img", :size => '250' %>
        <% end %>
      </div>

      <!--投稿画像(パソコン[小]の表示)-->
      <div class="d-none d-lg-block d-xl-none">
        <%= link_to post_coffee_path(post_coffee.id) do %>
          <%= image_tag post_coffee.get_image, class: "card-img", :size => '335' %>
        <% end %>
      </div>

      <!--投稿画像(タブレット[大]の表示)-->
      <div class="d-none d-md-block d-lg-none">
        <%= link_to post_coffee_path(post_coffee.id) do %>
          <%= image_tag post_coffee.get_image, class: "card-img", :size => '250' %>
        <% end %>
      </div>

      <!--投稿画像(タブレット[小]の表示)-->
      <div class="d-none d-sm-block d-md-none">
        <%= link_to post_coffee_path(post_coffee.id) do %>
          <%= image_tag post_coffee.get_image, class: "card-img", :size => '500' %>
        <% end %>
      </div>

      <!--投稿画像(スマホの表示)-->
      <div class="d-block d-sm-none">
        <%= link_to post_coffee_path(post_coffee.id) do %>
          <%= image_tag post_coffee.get_image, class: "card-img", :size => '350' %>
        <% end %>
      </div>

      <!--投稿名-->
      <div class="text-center">
        <h4><%= post_coffee.post_name.truncate(10) %></h4>
      </div>

      <div class="row justify-content-end">
        <!--コメント数　[非同期通信化]-->
        <i class="fa fa-comment m-1"></i>
        <div id="comment_count">
          <%= post_coffee.coffee_comments.count %>
        </div>

        <!--お気に入りボタン　[非同期通信化]-->
        <div class="pl-4 mr-4">
          <div id="favorite_buttons_<%= post_coffee.id %>">
            <%= render "public/favorites/favorite", post_coffee: post_coffee %>
          </div>
        </div>
      </div>

    </div>
  </div>
<% end %>