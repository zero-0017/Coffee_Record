<% @post_coffees.each do |post_coffee| %>
  <div class="col-md-6 col-lg-4 col-xl-3 card shadow">
    <div class="shadow">

      <!--投稿画像(パソコンの表示)-->
      <div class="d-none d-md-block">
        <%= link_to post_coffee_path(post_coffee.id) do %>
          <%= image_tag post_coffee.get_image, class: "card-img", :size => '250' %>
        <% end %>
      </div>

      <!--投稿画像(タブレット、スマホの表示)-->
      <div class="d-block d-md-none">
        <%= link_to post_coffee_path(post_coffee.id) do %>
          <%= image_tag post_coffee.get_image, class: "card-img", :size => '400' %>
        <% end %>
      </div>

      <!--投稿名-->
      <div class="text-center">
        <h4><%= post_coffee.coffee_name.truncate(10) %></h4>
      </div>

      <div class="row justify-content-end">
        <!--コメント数-->
        <i class="fa fa-comment m-1"></i>
        <div id="comment_count">
          <%= post_coffee.coffee_comments.count %>
        </div>

        <!--お気に入りボタン-->
        <div class="pl-4 mr-4">
          <div id="favorite_buttons_<%= post_coffee.id %>">
            <%= render "public/favorites/favorite", post_coffee: post_coffee %>
          </div>
        </div>
      </div>

    </div>
  </div>
<% end %>