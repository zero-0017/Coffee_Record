<%= render 'layouts/flash_message' %>
<div class="container">
  <h4 class="py-1 mt-2 back-text col-xl-3 col-lg-3 col-mb-4 col-sm-4"><strong>投稿一覧</strong></h4>

    <div class="list-old">
      <strong>
        <%= link_to '新着順', post_coffees_path(latest: "true") %>|<%= link_to '投稿順', post_coffees_path(old: "true") %>
      </strong>
    </div>

    <div class="row">

      <% if @post_coffees.present? %>
        <%= render 'public/post_coffees/post_index' %>
      <% else %>
        <div class="mx-auto mt-5">
          <h3><strong>投稿はありません</strong></h3>
        </div>
      <% end %>

  　</div>
</div>

<!--ページネーション-->
<div class="mx-auto mt-2 pb-5">
  <%= paginate @post_coffees %>
</div>