<div class="container">
  <h4><strong>新規投稿</strong></h4>
    <div class="row no-gutters">
      <div class="col-md-5 mx-sm-auto text-center shadow-lg py-5">
        <%= form_with model: @post_coffee do |f| %>

          <!--エラーメッセージ表示-->
          <%= render 'layouts/error_messages', model: f.object %>

            <h5>投稿画像</h5>
              <%= f.file_field :image, accept: "image/*" %><br>
            <h5>投稿名</h5>
              <%= f.text_field :coffee_name %><br>
            <h5>投稿説明</h5>
              <%= f.text_area :coffee_explanation %><br>

            <h5>タグ</h5>
              <%= f.collection_select :tag_id, Tag.all, :id, :tag_name, :prompt => "選択して下さい" %>
           <%= f.submit "投稿" %>
        <% end %>
      </div>
    </div>
</div>