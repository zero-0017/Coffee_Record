<!DOCTYPE html>
<html>
  <head>
    <title>Coffee_Record</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
  </head>

  <body>
    <%= render 'layouts/header' %>
     <% unless current_page?(root_path) %><!--検索機能をログイン済みのみに表示するため-->
      <% if user_signed_in? %>
        <div class="search-back">
          <div class='ml-auto py-2 r-5 col-xl-4 col-lg-5 col-md-7 col-sm-9'>
            <%= render 'public/searchs/search' %>
          </div>
        </div>

        <div class="sidebar-main">
          <div class="col-2 sidebar" >
            <%= render "public/post_coffees/sidebar_tag", tags: @tags %>
            <%= render "public/post_coffees/sidebar_category", categorys: @categorys %>
            <%= render "public/post_coffees/sidebar_genre", genres: @genres %>
          </div>
      <% end %>

          <div class="main">
            <%= yield %>
          </div>
        </div>

      <% else %>
        <%= yield %>
      <% end %>
    <%= render 'layouts/footer' %>
  </body>
</html>