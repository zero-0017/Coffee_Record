<!DOCTYPE html>
<html>
  <head>
    <title>Coffee_Record</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "application", :media => "all" %>
  </head>

  <header>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #000;">
	    <div class="container">
	      <% if user_signed_in? %>
	       <a class="navbar-brand" href="/about"><%= image_tag 'Coffee_Record.png', :size => '100x50' %></a>
	      <% else %>
         <a class="navbar-brand" href="/"><%= image_tag 'Coffee_Record.png', :size => '100x50' %></a>
        <% end %>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
           <div class="collapse navbar-collapse" id="navbarNavDropdown">
             <ul class="navbar-nav ml-auto">
               <% if user_signed_in? %>
                   <li class="nav-item">
	                 <%= link_to "マイページ", user_path(current_user.id), class: 'nav-link text-light' %>
                   </li>

                   <li class="nav-item">
	                 <%= link_to "新規投稿", new_post_coffee_path, class: 'nav-link text-light' %>
                   </li>

                   <li class="nav-item">
	                 <%= link_to "投稿一覧", post_coffees_path, class: 'nav-link text-light' %>
                   </li>

	               <li class="nav-item">
                   <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
	               </li>

	            <% elsif admin_signed_in? %>
	            　 <li class="nav-item">
     	             <%= link_to "会員一覧",  admin_path, class: 'nav-link text-light' %>
	               </li>

	               <li class="nav-item">
	                 <%= link_to "コメント一覧", admin_coffee_comments_path, class: 'nav-link text-light' %>
        	       </li>

	               <li class="nav-item">
	                 <%= link_to "タグ一覧", admin_tags_path, class: 'nav-link text-light' %>
        	       </li>

        	       <li class="nav-item">
	                 <%= link_to "カテゴリー一覧", admin_categorys_path, class: 'nav-link text-light' %>
        	       </li>

	               <li class="nav-item">
                   <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-light' %>
	               </li>

	            <% else %>
	               <li class="nav-item">
	                 <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, method: :post, class: 'nav-link text-light' %>
        	       </li>

	               <li class="nav-item">
	                 <%= link_to "新規登録",  new_user_registration_path, class: 'nav-link text-light' %>
        	       </li>

	               <li class="nav-item">
	                 <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-light' %>
	               </li>
	           <% end %>
	         </ul>
	       </div>
	     </div>
	   </nav>
  </header>

  <body>
    <% if user_signed_in? %>
      <div class='row' style="background-color: #333333;">
        <div class='ml-auto my-2 mr-5'>
          <%= render 'public/searchs/search' %>
        </div>
      </div>

      <div class="sidebar">
          <div class="col-2 sidebar-main" >
            <%= render "public/post_coffees/sidebar", tags: @tags %>
          </div>

          <div class="main">
            <%= yield %>
          </div>
      </div>

    <% else %>
        <%= yield %>
    <% end %>
  </body>
</html>
